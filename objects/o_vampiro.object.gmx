        <arguments>
          <argument>
            <kind>1</kind>
            <string>// animacion
s_ani_osci(id, 0, 2.8, 5); // body
s_ani_osci(id, 1, 2.5, 3); // cara
s_ani_paso(id, 0, 0.1, 5); // pies

if o_control.ver_literatura != -1 {
    exit;
}

// evitar que la cripta lo re capture
reloj_despierte = max(0, reloj_despierte - dlt);

// buscar aliado
if random(1) &lt; 0.1 and instance_exists(o_zombi) {
    amiguis = instance_nearest(x, y, o_zombi);
}

// meterse a la cripta
if reloj_despierte == 0 and collision_circle(x, y, 36, o_cripta, true, false) {
    o_cripta.dormido = true;
    o_cripta.info = false;
    audio_play_sound_at(a_cripta, x, y, -m_proy_altura,
        32, m_audio_distance, 1, false, 19);
    instance_destroy();
    exit;
}

// colision solidos
var otro = instance_place(x, y, o_bloque);
if otro != noone {
    direction = point_direction(otro.x, otro.y, x, y);
    direction -= s_rebote(id, direction);
    var vel = m_vampi_veloci * dlt;
    x += lengthdir_x(vel, direction);
    y += lengthdir_y(vel, direction);
}
else if point_distance(x, y, o_mouse.x, o_mouse.y) &gt; 64 {
    // manejo player
    direction = point_direction(x, y, o_mouse.x, o_mouse.y);
    var vel = m_vampi_veloci * dlt;
    x += lengthdir_x(vel, direction);
    y += lengthdir_y(vel, direction);
}

// limites
s_limites(id);

// anima pies
if x == xprevious and y == yprevious {
    reloj_pies = max(0, reloj_pies - dlt);
}
else {
    reloj_pies = 0.25;
}

// chupa sangre
if !s_dia() and sangre &lt;= m_vampi_sangre * 0.75 and o_control.reloj_nocome == 0 {
    var otro = collision_circle(x, y, m_areachupa, o_humano, true, false);
    if otro != noone {
        if o_control.reloj_fuego == 0 or otro.rol == m_rol_luz {
            var com = instance_create(otro.x, otro.y, o_come);
            com.campesino = otro.genero;
            com.campesino_sangre = otro.vida;
            com.campesino_origen = otro.origen;
            com.forma = 0;
            com.convierte = true;
            if otro.rol == m_rol_cruz {
                com.campesino_sangre = min(otro.vida, m_hum_sanveneno);
                com.veneno = true;
                audio_play_sound_at(a_veneno, otro.x, otro.y, -m_proy_altura,
                    32, m_audio_distance, 1, false, 16);
            }
            else if otro.rol == m_rol_divino and !diosa {
                diosa = true;
                ini_open("configuracion.ini");
                ini_write_real("stats", "diosa", 1);
                ini_close();
            }
            with otro {
                instance_destroy();
            }
            instance_destroy();
            exit;
        }
    }
}

// transformacion
if s_boton(0) {
    if s_sangre(-m_cost_transform, true) {
        s_vapor(m_vapor_parti, x, y, m_vapor_radio);
        audio_play_sound_at(a_bestia, x, y, -m_proy_altura,
            32, m_audio_distance, 1, false, 19);
        instance_create(x, y, o_bestia);
        instance_destroy();
    }
}
else if s_boton(1) {
    if s_sangre(-m_cost_transform, true) {
        s_vapor(m_vapor_parti, x, y, m_vapor_radio);
        audio_play_sound_at(a_espectro, x, y, -m_proy_altura,
            32, m_audio_distance, 1, false, 19);
        instance_create(x, y, o_espectro);
        instance_destroy();
    }
}

